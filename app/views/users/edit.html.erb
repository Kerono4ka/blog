<div class="container h-100">
  <div class="col-md-7 mx-auto">
    <div class="border border-secondary rounded p-5">

      <h1>Editing User</h1>
      <%= form_with(model: current_user, url: users_update_path, method: 'post', local: true) do |form| %>
        <%= render 'layouts/errors', model: current_user, model_str: 'user' %>

        <div class="form-group">
          <%= form.label :avatar %>
          <%= form.file_field :avatar  %>
        </div>

        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :login %>
          <%= form.text_field :login, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit 'Save', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>