<p>
  <p>
    <% unless @article.user.avatar.blank? %>
    <%= image_tag @article.user.avatar.variant(resize_to_limit: [100, 100]) %>
  <% end %>
    <em><%= comment.created_at.to_s(:long) %></em>
  </p>
  <p>
  <strong>Commenter:</strong>
  <%= current_user.login %>
  </p>
  <p>
  <strong>Comment:</strong>
  <%= comment.body %>
  </p>
</p>

<p>
  <%= link_to 'Destroy Comment', [comment.article, comment],
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
