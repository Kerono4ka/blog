<h1>Listing Articles</h1>

<%= render 'layouts/search_bar', our_path: welcome_index_path %>

<table>
  <tr>
    <th>Time</th>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.created_at.to_s(:short) %></td>
      <td>|<%= article.title %></td>
      <td>|<%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
