<p><%= alert %></p>
<div class="container h-100 w-500">
  <div class="col-md-4 mx-auto">
    <div class="border border-primary rounded p-5">

      <h1>Login</h1>
      <%= form_with(url: sessions_path) do |form| %>
        
        <div class="form-group" >
          <%= form.label :email %><br/>
          <%= form.text_field :email, class: "form-control"%>
        </div>
        <div class="form-group" >
          <%= form.label :password %><br/>
          <%= form.password_field :password, class: "form-control"%>
        </div>

        <%= hidden_field_tag "return_url", params[:before_login_path] %>
        <div class="form-group" ><%= submit_tag "Log In", class: "btn btn-primary"%></div>
      <% end %>

    </div>
  </div>
</div>

